<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:focusable="true"
    android:padding="30dp"
    android:background="@color/navy_blue"
    >

    <TextView
        android:id="@+id/tvAboutTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="56dp"
        android:text="About YellowBrick"
        android:textColor="@color/white"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvAbout"
        android:lineSpacingExtra="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:fontFamily="sans-serif-light"
        app:layout_constraintTop_toBottomOf="@id/tvAboutTitle"
        android:layout_marginTop="30dp"
        android:text="@string/aboutDesc"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/tvLegendTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Map Legend"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvAbout" />

    <TextView
        android:id="@+id/homicide"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Homicide"
        android:layout_marginTop="15dp"
        android:background="@drawable/rounded_button"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/tvLegendTitle"
        android:padding="2dp"
        android:textColor="@color/white"
        android:backgroundTint="@color/dark_red" />
    <TextView
        android:id="@+id/assault"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Assault"
        android:layout_marginTop="15dp"
        android:background="@drawable/rounded_button"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/homicide"
        android:padding="2dp"
        android:textColor="@color/white"
        android:backgroundTint="@color/orange_red" />
    <TextView
        android:id="@+id/threats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Threats"
        android:layout_marginTop="15dp"
        android:background="@drawable/rounded_button"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/assault"
        android:padding="2dp"
        android:textColor="@color/white"
        android:backgroundTint="@color/orange" />
    <TextView
        android:id="@+id/purse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Purse Snatching"
        android:layout_marginTop="15dp"
        android:background="@drawable/rounded_button"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/threats"
        android:padding="2dp"
        android:textColor="@color/white"
        android:backgroundTint="@color/pink" />
    <TextView
        android:id="@+id/prowl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Car Prowling"
        android:layout_marginTop="15dp"
        android:background="@drawable/rounded_button"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/purse"
        android:padding="2dp"
        android:textColor="@color/white"
        android:backgroundTint="@color/purple" />
    <TextView
        android:id="@+id/theft"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Vehicle Theft"
        android:layout_marginTop="15dp"
        android:background="@drawable/rounded_button"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/prowl"
        android:padding="2dp"
        android:textColor="@color/white"
        android:backgroundTint="@color/light_green" />
    <TextView
        android:id="@+id/burglary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Burglarly"
        android:layout_marginTop="15dp"
        android:background="@drawable/rounded_button"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/theft"
        android:padding="2dp"
        android:textColor="@color/white"
        android:backgroundTint="@color/blue" />
    <TextView
        android:id="@+id/robbery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Robbery"
        android:layout_marginTop="15dp"
        android:background="@drawable/rounded_button"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/burglary"
        android:padding="2dp"
        android:textColor="@color/white"
        android:backgroundTint="@color/dark_blue" />
    <TextView
        android:id="@+id/pickpocket"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pickpocketing"
        android:layout_marginTop="15dp"
        android:background="@drawable/rounded_button"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/robbery"
        android:padding="2dp"
        android:textColor="@color/white"
        android:backgroundTint="@color/tan" />
    <TextView
        android:id="@+id/other"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Other"
        android:layout_marginTop="15dp"
        android:background="@drawable/rounded_button"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/pickpocket"
        android:padding="2dp"
        android:textColor="@color/white"
        android:backgroundTint="@color/dark_yellow" />


    <TextView
        android:textAlignment="center"
        android:id="@+id/tvMentions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:fontFamily="sans-serif-light"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="30dp"
        android:text="@string/mentions"
        android:textColor="@color/white" />
</androidx.constraintlayout.widget.ConstraintLayout>